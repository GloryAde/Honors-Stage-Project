@page "/loans"
@using HSP.Models
@using HSP.Data
@using Microsoft.EntityFrameworkCore
@inject HspDbContext Db

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="app.css" rel="stylesheet">

<PageTitle>Loan Management</PageTitle>

<h3>Loan Management</h3>

@if (Loans == null || Loans.Count == 0)
{
    <p>No loans found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>User</th>
                <th>Loaned</th>
                <th>Due</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Loans)
            {
                <tr>
                    <td>@loan.Asset?.Name</td>
                    <td>@loan.User?.FullName</td>
                    <td>@loan.LoanDate.ToShortDateString()</td>
                    <td>@loan.DueDate.ToShortDateString()</td>
                    <td>@(loan.ReturnDate == null ? "On Loan" : "Returned")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<HSP.Models.Loan> Loans { get; set; }

    protected override void OnInitialized()
    {
        Loans = Db.Loans
            .Include(l => l.Asset)
            .Include(l => l.User)
            .ToList();
    }
}
