@page "/"

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Welcome to HSP Library Management System</h1>
            <p class="lead">Manage your library's inventory, loans, and users efficiently.</p>
            
            <hr class="my-4" />
            
            <div class="row mt-5">
                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <span class="bi bi-inventory-nav-menu" style="font-size: 3rem; color: #0066cc;"></span>
                            <h5 class="card-title mt-3">Inventory</h5>
                            <p class="card-text">Manage your library's assets and equipment.</p>
                            <a href="/inventory" class="btn btn-primary">Go to Inventory</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <span class="bi bi-loans-nav-menu" style="font-size: 3rem; color: #0066cc;"></span>
                            <h5 class="card-title mt-3">Loans</h5>
                            <p class="card-text">Track borrowed items and due dates.</p>
                            <a href="/loans" class="btn btn-primary">Go to Loans</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <span class="bi bi-users-nav-menu" style="font-size: 3rem; color: #0066cc;"></span>
                            <h5 class="card-title mt-3">Users</h5>
                            <p class="card-text">Manage library members and staff.</p>
                            <a href="/users" class="btn btn-primary">Go to Users</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
