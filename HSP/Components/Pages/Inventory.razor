@page "/Inventory"
@using HSP.Models
@using HSP.Data
@using Microsoft.EntityFrameworkCore
@inject HspDbContext Db
@rendermode InteractiveServer

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="app.css" rel="stylesheet">

<PageTitle>Inventory Management</PageTitle>
<h3>Inventory Management</h3>

<div class="container mt-4">
    <!-- Add Asset Button -->
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="ShowAddAssetForm">
            <span class="bi bi-plus-circle"></span> Add New Asset
        </button>
    </div>

    <!-- Add Asset Form -->
    @if (showAddForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>Add New Asset</h5>
            </div>
            <div class="card-body">
                <EditForm Model="newAsset" OnValidSubmit="HandleAddAsset">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label for="assetName" class="form-label">Asset Name</label>
                        <InputText id="assetName" class="form-control" @bind-Value="newAsset.Name" placeholder="e.g., Laptop Dell XPS 15" />
                    </div>

                    <div class="mb-3">
                        <label for="assetCategory" class="form-label">Category</label>
                        <InputText id="assetCategory" class="form-control" @bind-Value="newAsset.Category" placeholder="e.g., Electronics, Books, Equipment" />
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <InputCheckbox id="assetAvailable" class="form-check-input" @bind-Value="newAsset.IsAvailable" />
                            <label class="form-check-label" for="assetAvailable">
                                Available for Loan
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Save Asset</button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelAddAsset">Cancel</button>
                    </div>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @message
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @errorMessage
                        </div>
                    }
                </EditForm>
            </div>
        </div>
    }

    <!-- Assets List -->
    <div class="card">
        <div class="card-header">
            <h5>Current Assets</h5>
        </div>
        <div class="card-body">
            @if (assets == null)
            {
                <p><em>Loading assets...</em></p>
            }
            else if (!assets.Any())
            {
                <p class="text-muted">No assets found. Add your first asset to get started.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asset in assets)
                            {
                                <tr>
                                    <td>@asset.ItemId</td>
                                    <td>@asset.Name</td>
                                    <td>@asset.Category</td>
                                    <td>
                                        @if (asset.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">On Loan</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Asset>? assets;
    private Asset newAsset = new Asset();
    private bool showAddForm = false;
    private string message = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssets();
    }

    private async Task LoadAssets()
    {
        assets = await Db.Assets.OrderBy(a => a.ItemId).ToListAsync();
    }

    private void ShowAddAssetForm()
    {
        showAddForm = true;
        newAsset = new Asset { IsAvailable = true };
        message = string.Empty;
        errorMessage = string.Empty;
    }

    private void CancelAddAsset()
    {
        showAddForm = false;
        newAsset = new Asset();
        message = string.Empty;
        errorMessage = string.Empty;
    }

    private async Task HandleAddAsset()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(newAsset.Name) || string.IsNullOrWhiteSpace(newAsset.Category))
            {
                errorMessage = "Please fill in all required fields.";
                return;
            }

            Db.Assets.Add(newAsset);
            await Db.SaveChangesAsync();

            message = $"Asset '{newAsset.Name}' added successfully!";
            errorMessage = string.Empty;

            // Reload the assets list
            await LoadAssets();

            // Reset form after a delay
            await Task.Delay(2000);
            showAddForm = false;
            newAsset = new Asset();
            message = string.Empty;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error adding asset: {ex.Message}";
            message = string.Empty;
        }
    }
}
