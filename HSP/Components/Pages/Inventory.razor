@page "/Inventory"
@rendermode InteractiveServer

<PageTitle>Inventory Management</PageTitle>
<h3>Inventory Management</h3>

<div class="container mt-4">
    <!-- Add Asset Button -->
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="ShowAddAssetForm">
            <span class="bi bi-plus-circle"></span> Add New Asset
        </button>
    </div>

    <!-- Add Asset Form -->
    @if (showAddForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>Add New Asset</h5>
            </div>
            <div class="card-body">
                <EditForm Model="newAsset" OnValidSubmit="HandleAddAssetAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label for="assetName" class="form-label">Asset Name</label>
                        <InputText id="assetName" class="form-control" @bind-Value="newAsset.Name" placeholder="e.g., Laptop Dell XPS 15" />
                    </div>

                    <div class="mb-3">
                        <label for="assetCategory" class="form-label">Category</label>
                        <InputText id="assetCategory" class="form-control" @bind-Value="newAsset.Category" placeholder="e.g., Electronics, Books, Equipment" />
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <InputCheckbox id="assetAvailable" class="form-check-input" @bind-Value="newAsset.IsAvailable" />
                            <label class="form-check-label" for="assetAvailable">
                                Available for Loan
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Save Asset</button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelAddAsset">Cancel</button>
                    </div>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @message
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @errorMessage
                        </div>
                    }
                </EditForm>
            </div>
        </div>
    }

    <!-- Assets List -->
    <div class="card">
        <div class="card-header">
            <h5>Current Assets</h5>
        </div>
        <div class="card-body">
            @if (assets == null)
            {
                <p><em>Loading assets...</em></p>
            }
            else if (!assets.Any())
            {
                <p class="text-muted">No assets found. Add your first asset to get started.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asset in assets)
                            {
                                <tr>
                                    <td>@asset.ItemId</td>
                                    <td>@asset.Name</td>
                                    <td>@asset.Category</td>
                                    <td>
                                        @if (asset.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">On Loan</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
